{
  "type": "AdaptiveCard",
  "body": [
    {
      "type": "TextBlock",
      "size": "Medium",
      "weight": "Bolder",
      "text": "Wazuh Security Event"
    },
    {
      "type": "TextBlock",
      "text": "Event ID: ${eventId}",
      "wrap": true
    },
    {
      "type": "TextBlock",
      "text": "Event Name: ${eventName}",
      "wrap": true
    },
    {
      "type": "TextBlock",
      "text": "Description: ${eventDescription}",
      "wrap": true
    },
    {
      "type": "FactSet",
      "facts": [
        {
          "title": "Timestamp:",
          "value": "${eventTimestamp}"
        },
        {
          "title": "Severity:",
          "value": "${eventSeverity}"
        },
        {
          "title": "Source IP:",
          "value": "${sourceIP}"
        },
        {
          "title": "Destination IP:",
          "value": "${destinationIP}"
        }
      ]
    }
  ],
  "$schema": "http://adaptivecards.io/schemas/adaptive-card.json",
  "version": "1.4"
}

